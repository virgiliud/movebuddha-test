{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,

  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "name": "Poppins",
          "slug": "body",
          "fontFamily": "Poppins, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif"
        },
        {
          "name": "Nunito Sans",
          "slug": "display",
          "fontFamily": "Nunito Sans, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans, sans-serif"
        }
      ]
    },

    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "primary",   "name": "Primary (Light Green)",       "color": "#005928" },
        { "slug": "secondary", "name": "Secondary (Dark Green)",      "color": "#00682C" },
        { "slug": "tertiary",  "name": "Tertiary (Primary Green)",    "color": "#97bf3e" },

        { "slug": "foreground","name": "Foreground",                   "color": "#111111" },
        { "slug": "muted-foreground","name": "Muted FG",               "color": "#5B6478" },
        { "slug": "elevated-foreground", "name": "Elevated FG",        "color": "#5b646f" },

        { "slug": "background","name": "Background",                   "color": "#fcfcfc" },
        { "slug": "surface",   "name": "Surface",                      "color": "#F0F5F9" },
        { "slug": "subtle",    "name": "Subtle",                       "color": "#F5F7FB" },
        { "slug": "muted",     "name": "Muted",                        "color": "#edf4ef" },
        { "slug": "elevated",  "name": "Elevated",                     "color": "#ffffff" },

        { "slug": "label",     "name": "Label",                        "color": "#ffffff" },
        { "slug": "label-foreground", "name": "Label FG",              "color": "#97bf3e" },

        { "slug": "border",    "name": "Border",                       "color": "#D4D9E1" },
        { "slug": "border-strong","name":"Border Strong",              "color": "#B5BBC7" },

        { "slug": "success",   "name": "Success",                      "color": "#00AE4D" },
        { "slug": "warning",   "name": "Warning",                      "color": "#F59E0B" },
        { "slug": "danger",    "name": "Danger",                       "color": "#EF4444" },
        { "slug": "info",      "name": "Info",                         "color": "#2563EB" }
      ]
    },

    "border": {
      "color": false,
      "radius": false,
      "style": false,
      "width": false
    },

    "layout": {
      "contentSize": "80rem",
      "wideSize": "1200px"
    }
  },

  "styles": {
    "color": {
      "text": "var(--wp--preset--color--foreground)",
      "background": "var(--wp--preset--color--background)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "1rem"
    },

    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--display)",
          "fontWeight": "700"
        }
      },
      "button": {
        "color": {
          "text": "#ffffff",
          "background": "var(--wp--preset--color--primary)"
        }
      }
    }
  }
}
